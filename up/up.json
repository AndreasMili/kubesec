{
  "name": "kubesec-io",
  "regions": [
    "us-east-1"
  ],
  "hooks": {
    "build": [
      "cp -f ../kseccheck.sh ../k8s-rules.json .",
      "(cd ../ && make gen-html)",
      "(cd ../kubesec.io/ && rm -rf ../up/public/ && hugo --destination ../up/public/)"
    ]
  },
  "proxy": {
    "memory": 1024,
    "timeout": 5
  },
  "lambda": {
    "memory": 1536
  },
  "stages": {
    "production": {
      "domain": "kubesec.io"
    }
  }
}
